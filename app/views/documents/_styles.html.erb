<% content_for :stylesheets do %>
<link href="/css/quill.snow.css" rel="stylesheet">
<link href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" rel="stylesheet">
<link href="/css/tocbot.css" rel="stylesheet">
<style type="text/css">
/* 	quilljs cdn: https://cdn.quilljs.com/1.3.6/quill.snow.css 
	tocbot cdn: https://cdnjs.cloudflare.com/ajax/libs/tocbot/4.1.1/tocbot.css
*/
.is-active-link {
	font-weight: 400;
}
.ql-container {
    border-style: none !important;
}
.ql-editor {
    /*height: auto !important;*/
	border-style: solid;
	border-color: #ccc;
	border-width: 1px;
    min-height: 100px;
    /*position: fixed;*/
    width: 100%;
    position: relative;
}
#toc {
	min-height: 100px;
	overflow-y: auto;
	border-style: solid;
	border-color: #ccc;
	border-width: 1px;
}
.toc-link::before {
	position: static;
}
#toc ol {
	margin-left: 15px;
}
.col_toc div {
	border-style: solid;
	border-color: #ccc;
	border-width: 1px;
	padding: 10px 15px;
    /*margin: 0 15px 0 15px;
    display: block;
    width: auto;*/
}
#text_content li {
	font-size: 16px !important;
	font-weight: bold;
	margin-left: 12px;
}
#text_content p {
	margin-left: 12px;
}
.ql-editor.ql-blank::before {
	margin-left: 12px;
}
.col_toc {
/*    display: inline-block; 
    position: relative; 
    float: left; */
    display: block;
}
.col_content {
/*    display: inline-block; 
    position: relative; */
    display: block;
}
</style>
<% end %>
